<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/navbar') %>
    <title>Create Booking</title>
  </head>

  <body>

    <form action="/createBooking" method="post" style="margin: 20px">
      <div class="col-3">
        <label for="bookingID" class="col-md-3 col-form-label">Booking ID</label>
        <div class="col-sm-10">
          <input
            type="Number"
            class="form-control"
            name="bookingID"
            required
          />
        </div>
      </div>
      <div class="col-3">
        <label for="bookingDate" class="col-md-3 col-form-label">Date of Booking</label>
        <div class="col-sm-10">
          <input
            type="Date"
            class="form-control"
            name="bookingDate"
            required
          />
        </div>
      </div>
        <div>
          <span style="color: green;"><%= successMessage%></span>
          <span style="color: red;"><%= failMessage%></span>
        </div>
  </body>
</html>