<div class="container" style="padding: 20px">
  <h1>Create a Menu Item</h1>
  <form>
    <div class="container" style="padding: 20px">
      <div class="form-group">
        <label for="formGroupExampleInput">Dish Name</label>
        <input
          type="text"
          class="form-control"
          id="formGroupExampleInput"
          placeholder="Input dish name"
        />
      </div>

      <div class="form-group">
        <label for="formGroupExampleInput2">Description</label>
        <input
          type="text"
          class="form-control"
          id="formGroupExampleInput2"
          placeholder="Input description"
        />
      </div>

      <div class="form-group">
        <label for="formGroupExampleInput2">Ingredients</label>
        <input
          type="text"
          class="form-control"
          id="formGroupExampleInput2"
          placeholder="Input ingredients"
        />
      </div>
    </div>

    <h5 style="margin-top: 10px">Time Category</h5>
    <div class="container" style="padding: 20px">
      <div class="row">
        <div class="form-check col">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
          <label class="form-check-label" for="flexCheckDefault">
            Breakfast
          </label>
        </div>

        <div class="form-check col">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
          <label class="form-check-label" for="flexCheckDefault"> Lunch </label>
        </div>

        <div class="form-check col">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
          <label class="form-check-label" for="flexCheckDefault">
            Dinner
          </label>
        </div>
      </div>
    </div>
  </form>
</div>
