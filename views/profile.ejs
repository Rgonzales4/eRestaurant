<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <%- include('partials/navbar') %>
  </head>
  <body>
    <div class="container-sm" style="padding: 50px">
      <h2>User Profile</h2>
      <% if (user.isAdmin == true){%>
      <label style="color: green; padding: 10px">Admin Account</label>
      <% } %>
      <div class="row">
        <div class="col-2">
          <div class="row">
            <label class="text-muted">First Name</label>
          </div>
          <div class="row">
            <label class="text-muted">Last Name</label>
          </div>
          <div class="row">
            <label class="text-muted">Email</label>
          </div>
          <div class="row">
            <label class="text-muted">User ID</label>
          </div>
        </div>

        <div class="col-1">
          <div class="row g-3">
            <label><%= user.firstName%></label>
          </div>
          <div class="row g-3">
            <label><%= user.lastName%></label>
          </div>
          <div class="row g-3">
            <label><%= user.email%></label>
          </div>
          <div class="row g-3">
            <label><%= user.userId%></label>
          </div>
        </div>

        <div class="col"></div>
      </div>
      <% if (req.user.isAdmin == true){%>
      <div class="col-lg-4" style="margin-top: 10px">
        <a href="#" class="btn btn-primary btn-sm">Edit Account</a>
        <!-- <form
          action="database/account/<%= user.userId %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger btn-sm">
            Delete User
          </button>
        </form> -->
      </div>
      <% } %>
    </div>
  </body>
</html>
