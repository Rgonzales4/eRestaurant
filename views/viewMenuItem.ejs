  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/navbar') %> <%- include('partials/style')%>
    <title>Menu</title>
  </head>
  <body
    style="
      min-height: 100vh;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      background-color: rgba(253, 245, 235, 0.584);
    "
  >

  

  <div style="height: 800px; width: 100%;">


    <div class="productImage" style="width: 50%; float: left; height: 800px;">
      <div class="container" style="flex-grow: 1; float: right;">
        <h1 style="margin: 20px; float: right;"><%= menuItem.itemName%></h1>
  
        <% if(menuItem.itemImg) { %>
        <div class="container" style="float: right;">
          <img src="/uploads/<%= menuItem.itemImg%>" 
          
          style="float: right;"
          width="45%" />
        </div>
        <% } %>
  
        <br />


    </div>
  </div>




    <div class="productDetails" style="width: 50%; height: 800px; float: right; padding-top: 80px;"> 

      <div style="background-color: #49814463; border-radius: 5%; height: auto; padding-left: 8%; padding-top: 40px; padding-bottom: 10%; margin-right: 20%;"> 
      
      
        <h5 class="text-muted">Price: $<%= menuItem.itemPrice%></h5>
  
        <p class="text-muted">
          <% if(menuItem.mealType == "LunchDinner") { %> Lunch & Dinner <% } else
          { %> <%= menuItem.mealType%><% } %> menu item
        </p>
        <%- include('partials/menu_item_categories')%>
        <br />
  
        <p><%= menuItem.itemDescription%></p>
        <br />
  
        <h6>Ingredients:</h6>
        <p><%= menuItem.itemIngredients%></p>
        <br />
  
  
        <% if (req.user && req.user.isAdmin == true) {%>
        <div class="container" style="padding-bottom: 30px; float: right;">
          <a
            href="/menu/editMenuItem/<%= menuItem.itemID%>"
            class="btn btn-primary btn-sm"
            >Edit Menu Item</a
          >
          <form
           action="/menu/<%= menuItem.itemID %>?_method=DELETE"
           method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger btn-sm">Delete Item</button>
          </form>
      
        <% } %>

        </div>

      </div>

    </div>

