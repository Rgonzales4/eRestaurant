<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/navbar') %>
    <title style="color: rgb(255, 245, 235);">Menu</title>
  </head>
  <body>
    <h1 style="padding-top: 40px; text-align: left; padding-left: 12%;" >MENU</h1>

    
    <br/>

    <div class="container">


      <div class="wrapper">

        <div class="container" style="float: left; width: 30%; background-color: grey; padding: 1%; align-content: center;">
          
          <form>
          <div style="padding: 5%; font-size: 30px;">Search Filters</div>

          <div style="padding: 4%;">
            <label for="customRange1" class="form-label" style="font-size: 20px;">Price</label>
            <input type="range" class="form-range" id="customRange1">
          </div>


          <label for="customRange1" class="form-label" style="padding-top: 5%; padding-left: 5%; font-size: 20px;">Dietary Requirements</label>
          
          <div class="form-check" style="margin-left: 9%;">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Vegetarian
            </label>
          </div>

          <div class="form-check" style="margin-left: 9%;">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Vegan
            </label>
          </div>

          <div class="form-check" style="margin-left: 9%;">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Gluten Free
            </label>
          </div>

          <div class="form-check" style="margin-left: 9%;">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Dairy Free
            </label>
          </div>

          <div class="form-check" style="margin-left: 9%;">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Nut Free
            </label>
          </div>
          

          <div class="container" style="padding-top: 30px; width: 100%; " >
            <a class="btn btn-outline-success me-2">Clear All</a>
          </div>

        </form>

        </div>



        <div class="container" style="float: right; background-color: blueviolet; width: 70%;" >

          <div class="btn-group" role="group" aria-label="Basic outlined example" style="width: 100%; padding-top: 2%; padding-bottom: 2%;">
            <button type="button" class="btn btn-outline-primary">Breakfast</button>
            <button type="button" class="btn btn-outline-primary">Lunch & Dinner</button>
            <button type="button" class="btn btn-outline-primary">Drinks</button>
          </div>

          <div class="row">
            <% if(menu_item) {%> <% Array.from(menu_item).forEach(m => { %>
            <div class="col-lg-4" style="float: left">
              <div class="card mt-2">
                <div class="card-body">
                  <h4 class="card-title"><%= m.itemName %></h4>
                  <div class="card-title"><%= m.itemDescription %></div>
                  <a href="/menu/<%= m.itemID%>" class="btn btn-info">Read More</a>
                </div>
              </div>
            </div>
            <% }) %> <% } %>
          </div>

        </div>

      </div>

    </div>

    <% if (req.user && req.user.isAdmin == true) { %>
      <div class="container" style="padding-top: 30px; width: 100%; float: left; " >
        <a href="menu/createMenuItem" class="btn btn-outline-success me-2"
          >Create new menu item</a
        >
      </div>
     
      <% } %>

  </body>
</html>
